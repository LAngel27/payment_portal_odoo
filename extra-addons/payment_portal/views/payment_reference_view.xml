<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_payment_reference_portal_payment_list" model="ir.ui.view">
            <field name="name">payment.reference.portal.payment.list</field>
            <field name="model">payment.reference.portal.payment</field>
            <field name="arch" type="xml">
                <list create="1" string="RetenciÃ³n municipal del proveedor">
                    <field name="partner_id" readonly="1"/>
                    <field name="name" />
                    <field name="payment_date" />
                    <field name="payment_owner" />
                    <field name="vat" />
                    <field name="payment_type" />
                    <field name="currency_id"  invisible="1"/>
                    <field name="amount" />
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-danger="state == 'cancel'" />
                </list>
            </field>
        </record>

        <record id="view_payment_reference_portal_payment_form" model="ir.ui.view">
            <field name="name">payment.reference.portal.payment.form</field>
            <field name="model">payment.reference.portal.payment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Confirmar" name="action_confirm" type="object" class="oe_highlight"  invisible="state == 'confirmed'"/>
                        <button string="Restablecer a Borrador" name="action_draft" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string='payment.reference.portal.payment'>
                        <group>
                            <group>
                                <field name='partner_id' can_create='true' can_write='true'/>
                                <field name='payment_date' />
                                <field name='payment_type' />
                                <field name='amount' readonly="state == 'confirmed'"/>
                                <field name='bank_emissor' invisible="payment_type == 'cash'"/>
                                <field name='payment_memo' invisible="invoice_number != ''"/>
                                <field name='payment_attachment' widget="binary" filename="attachment_name"/>
                                <field name="attachment_name" invisible="1"/>
                                <field name='company_id' invisible="True"/>
                                <field name="payment_ids" widget="many2many_tags" readonly="state == 'confirmed'"/>
                            </group>
                            <group>
                                <field name='payment_owner' />
                                <field name='invoice_number'/>
                                <field name='currency_id' invisible="1"/>
                                <field name='vat' />
                                <field name='payment_reference' invisible="payment_type == 'cash'"/>
                                <field name='bank_receptor' invisible="payment_type == 'cash'"/>
                                <field name='attachment_id' invisible="1"/>
                                <field name='state'/>
                                <field name="observation" />
                            </group>
                        </group>
                        <group>
                            <separator/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_payment_references_portal_payment" model="ir.actions.act_window" >
            <field name="name">Portal Payment References</field>
            <field name="res_model">payment.reference.portal.payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="help">Here you will see the payments made from the payment portal so that they can later be associated/created in their appropriate places.</field>
        </record>

        <menuitem id="menu_action_records_payment_references" name="Portal Payment Reference" action="action_payment_references_portal_payment" parent="account.menu_finance_receivables" sequence="16"/>
    </data>
</odoo>